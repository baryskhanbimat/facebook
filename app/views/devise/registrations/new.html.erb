<div class="col-md-4 col-md-offset-4">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Sign up</h2>
      </div>
      <div class="panel-body">
        <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

            <div class="form-inputs">
              <div class="form-group">
                <%= f.email_field :email, autofocus: true, required: false,  input_html: {class: 'from-control'} %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, required: false, input_html: {class: 'from-control'} %>
              </div>
              <div class="form-group">
                <%= f.password_field :password_confirmation, required: false, input_html: {class: 'from-control'} %>
              </div>
            </div>

            <div class="form-actions">
              <%= f.submit 'Sign up', class: 'btn btn-primary' %>
            </div>
        <% end %>

        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</div>


